name: 24/7 Server Keep-Alive
on:
  schedule:
    - cron: '*/5 * * * *' # প্রতি ৫ মিনিট পর পর রোবটটি কাজ করবে
  workflow_dispatch:      # যাতে আপনি নিজেও যখন খুশি এটি চালু করতে পারেন

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Pinging IDX Server
        run: |
          curl -s https://9000-firebase-real-pros-1767945983090.cluster-mwsteha33jfdowtvzffztbjcj6.cloudworkstations.dev/?monospaceUid=324643
          echo "Successfully pinged at $(date)"
